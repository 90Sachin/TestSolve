<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5dp"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginRight="@dimen/_5dp"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/imageMoviePoster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:padding="@dimen/_2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sachin"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/watch"
                android:padding="@dimen/_2dp"
                />
        <TextView
            android:id="@+id/textMovieUploadTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Sachin"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sp"
            android:layout_marginLeft="@dimen/_5dp"
            android:textColor="@color/gray"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/textMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sachin s  mad d sd ksa  kad aak dk ak a kdka dakd kadkka dkakd akd ka d"
            android:textSize="@dimen/_12sp"
            android:layout_marginTop="@dimen/_5dp"
            android:textColor="@color/gray"
            />

    </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>